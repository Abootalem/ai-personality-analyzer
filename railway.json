{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "npm run preview",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environment": {
    "NODE_ENV": "production"
  },
  "variables": {
    "GEMINI_API_KEY": {
      "description": "Your Google Gemini API key for AI personality analysis",
      "required": true
    }
  }
}
